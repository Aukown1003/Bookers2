<div class ="container">
  
  <div id ="error_box">
  <% if @book.errors.any? %>
  <ul class="alert alert-danger" role="alert">
  <h3>
  <%= @post_image.errors.count %>件のエラーが発生しました
  </h3>
  <% @post_image.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
  </ul>
  <% end %>
  </div>
  
  <div class ="row">
    <div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
       <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div class ="form_box">
          <label class ="form-label">Title</label>
          <%= f.text_field :title, class: "form-control"%>
        </div>
        <div class ="form_box">
          <label class = "form-label">Opinion</label>
          <%= f.text_area :body, class: "form-control"%>
        </div>
        <div class ="form_box">
          <%= f.submit 'Update Book', class: "btn btn-success" %></p>
        </div>
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>